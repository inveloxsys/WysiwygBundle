{
    "name": "muchomasfacil/WysiwygBundle",
    "type": "symfony-bundle",
    "description": "This bundles makes really easy to add ckeditor4, tinymce4 to your forms inputs with per input field settings. Optional integrate the elfinder file manager. You can extend it to use with your prefered editors.",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Alvaro Marcos",
            "email": "alvaro@muchomasfacil.com"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "component/elfinder",
                "type": "component",
                "version": "dev-master",
                "source": {
                    "url": "git@github.com:Studio-42/elFinder.git",
                    "type": "git",
                    "reference": "2.x"
                },
                "require": {
                    "robloach/component-installer": "*"
                },
                "extra": {
                    "component": {
                        "scripts": [
                            "js/*.js",
                            "js/*/*.js"
                        ],
                        "styles" : [
                            "css/*.css"
                        ],
                        "files": [
                            "img/*.png",
                            "img/*.gif"                                                        
                        ]
                    }
                }
            }
        }
    ],
    "require": {
        "friendsofsymfony/jsrouting-bundle": "~1.1",
        "component/elfinder": "dev-master"
    },
    "autoload": {
        "psr-0": { "MuchoMasFacil\\WysiwygBundle": "" }
    },

    "target-dir": "MuchoMasFacil/WysiwygBundle"
}
